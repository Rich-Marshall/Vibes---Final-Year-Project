<div class="column">
 	<nav class="panel">
 		<p class="panel-heading">Artists You Might Like</p>
    <% @users = User.all %>
    <% @users.each do | user | %>
    <div class="panel-block">
      <article class="media">
        <div class="media-left">
          <figure class="image is-32x32">
        	   <%= gravatar_image_tag(user.email, size: 64, alt: user.name) %>
           </figure>
         </div>
         <div class="media-content">
           <div class="content">
             <p>
               <strong><%= link_to user_path(user) do %><%= user.name %><% end %></strong>
               <small>@<%= user.username %></small>
             </p>
           </div>
         </div>
      </article>
    </div>
    <% end %>
  </nav>
</div>
