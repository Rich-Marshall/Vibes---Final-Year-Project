<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag "https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>

</head>
<body>
<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">

      <h2 class="title is-5">Profile</h2>
        <%= simple_form_for(@user) do |f| %>
          <%= f.error_notification %>

              <div class="columns">
                <div class="column is-3">
                  <p><%= gravatar_image_tag(@user.email, size: 64, alt: @user.name) %></p>
                </div>
                <div class="column">
                  <span class="title is-3"><%= @user.name %></span>
                  <br>
                  <strong>@<%= @user.username %></strong>

                  <p>
                    <%= @user.tel %>
                  </p>
                  <p>
                    <%= @user.location %>
                  </p>
                  <p>
                    <%= @user.genre %>
                  </p>
                  <p>
                    <%= link_to @user.website, @user.website %>
                  </p>
                </div>
              </div>

            <br>

          <% end %>

          <h2 class="title is-5">Shouts</h2>
          
          <%= render :partial => 'shouts/user_shouts' %>
          <br>
          <h2 class="title is-5">Events</h2>

          <%= render :partial => 'events/user_events' %>
          <br>


          <%= link_to 'Back', url_for(:back), class: "button is-dark is-rounded" %>

      </div>
    </div>
  </div>
</section>
</body>
</html>
