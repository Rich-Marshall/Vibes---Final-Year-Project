<!DOCTYPE html>
<html>
<head>
  <title>Vibes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag "https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:notice] %>
<div class="notification is-primary global-notification">
  <p class="notice"><%= notice =%></p>
</div>
<% end %>

<% if flash[:alert] %>
  <div class="notification is-danger global-notification">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>
<% end %>

<nav class="navbar is-warning">
  <div class="navbar-brand">
   		<%= link_to root_path, class: "navbar-item" do %>
   			<h1 class="title is-5">Vibes</h1>
   		<% end %>
 			<div class="navbar-burger burger" data-target="navbarExample">
 					<span></span>
 					<span></span>
 					<span></span>
   		</div>
  </div>

 	<div id="navbarExample" class="navbar-menu">
 		<div class="navbar-end">
      <div class="navbar-item">
 			  <div class="field is-grouped">
 					<p class="control">
 						<%= link_to 'New Shout', root_path, class: "button is-warning is-inverted" %>
 					</p>

          <p class="control"> Sign Up </p>
          <p class="control"> Sign In </p>
        </div>
      </div>
    </div>
  </div>
</nav>

<%= yield %>

</body>
</html>
