<%= simple_form_for(@shout) do |f| %>
 <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :shout, label: "Go on, SHOUT it out!",
        input_html: { class: "textarea" }, wrapper: false,
        label_html: {class: "label"}, placeholder: "What do you want to shout?...",
        autofocus: true %>
    </div>
  </div>
 <%= f.button :submit, class: "button is-dark is-rounded" %>
<% end %>
