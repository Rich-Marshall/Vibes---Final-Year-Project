<div class="column is-half">
    
<% @events.each do | event | %>
  <div class="box">
  	<article class="media">
  		<div class="media-left">
   			<figure class="image is-64x64">
   				<%= gravatar_image_tag(event.user.email, size: 64, alt: event.user.name) %>
   			</figure>
   		</div>
   		<div class="media-content">
   			<div class="content">
   				<strong><%= event.user.name %></strong><br />
   				<small>@<%= event.user.username %></small><br/>
          <p><%= event.name %></p>
          <p><%= event.start_date %></p>
          <p><%= event.end_date %></p>
          <p><%= event.cover_img %></p>
          <p><%= event.location %></p>
          <p><%= event.description %></p>
          <p><%= event.host %></p>
   			</div>

        <% if user_signed_in? %>
   			<nav class="level">
   				<div class="level-left is-mobile">
   					<%= link_to edit_event_path(event), class: "level-item" do %>
   					  <span class="icon"><i class="fa fa-pencil" aria-hidden="true" style="color:grey"></i></span>
   					<% end %>
   					<%= link_to event, method: :delete, data: { confirm: "Are you sure you want to delete this event?" } do %>
   							<span class="icon"><i class="fa fa-trash-o" aria-hidden="true" style="color:grey"></i></span>
   					<% end %>
          </div>
   			</nav>
        <% end %>
   		</div>
   	</article>
  </div>
<% end %>
</div>
