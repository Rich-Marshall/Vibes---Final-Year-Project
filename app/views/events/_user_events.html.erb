<% @user_events.each do | event | %>

  <div class="box">
  	<article class="media">
  		<div class="media-left">
   			<figure class="image is-64x64">
   				<%= gravatar_image_tag(event.user.email, size: 64, alt: event.user.name) %>
   			</figure>
   		</div>
   		<div class="media-content">
   			<div class="content">
   				<strong><%= link_to user_path(event.user) do %><%= event.user.name %><% end %></strong><br/>
   				<small>@<%= event.user.username %></small><br/>
          <br>
          <article class="box">
       			<%= link_to event_path(event) do %><%= image_tag "event_img/#{event.id}/cover/#{event.cover_filename}" %><% end %>
            <div class="columns">
              <div class="column is-one-quarter">
                <p><%= event.start_date %> <%= event.end_date %></p>
              </div>
              <div class="column is-1">
              </div>
              <div class="column">
                <strong><%= link_to event_path(event) do %><%= event.name %><% end %></strong><br>
                <small><%= event.location %></small>
              </div>
            </div>
          </article>

   			</div>
        <% if event_author(event) %>
   			<nav class="level">
   				<div class="level-left is-mobile">
   					<%= link_to edit_event_path(event), class: "level-item" do %>
   					  <span class="icon"><i class="fa fa-pencil" aria-hidden="true" style="color:grey"></i></span>
   					<% end %>
   					<%= link_to event, method: :delete, data: { confirm: "Are you sure you want to delete this event?" } do %>
   							<span class="icon"><i class="fa fa-trash-o" aria-hidden="true" style="color:grey"></i></span>
   					<% end %>
          </div>
   			</nav>
        <% end %>
   		</div>
   	</article>
  </div>
<% end %>

<p class="title is-7">There are no more events to show for this profile..</p>
